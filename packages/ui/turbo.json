{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "prep:fonts": {
      "inputs": ["static/public/fonts/preload/**"],
      "outputs": ["build/preloaded-fonts.json"]
    },
    "prep:scripts": {
      "dependsOn": ["^prep"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        ".swcrc",
        "tsconfig.json",
        "static/public/**"
      ],
      "outputs": ["build/**/*.js"]
    },
    "prep:types": {
      "dependsOn": ["^prep"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"],
      "outputs": ["build/**/*.d.ts"]
    },
    "prep:styles": {
      "inputs": [
        "postcss.config.cjs",
        "tailwind.config.cjs",
        "tailwind.css",
        "src/**/*.css",
        "src/components/**/*tsx"
      ],
      "outputs": ["build/styles.css"]
    },
    "prep:iframe": {
      "inputs": ["postcss.config.cjs", "tailwind.config.cjs", "iframe.css"],
      "outputs": ["build/iframe.css"]
    },
    "prep:gutenberg": {
      "inputs": [
        "postcss.config.cjs",
        "tailwind.config.cjs",
        "tailwind.css",
        "src/**/*.css",
        "src/components/**/*tsx"
      ],
      "outputs": ["build/gutenberg.css"]
    },
    "prep:i18n": {
      "inputs": ["src/components/**/*.tsx"],
      "outputs": ["build/translatables.json"]
    },
    "prep": {
      "dependsOn": [
        "prep:fonts",
        "prep:types",
        "prep:scripts",
        "prep:styles",
        "prep:iframe",
        "prep:gutenberg",
        "prep:i18n"
      ]
    },
    "build": {
      "inputs": [
        ".storybook/**",
        "postcss.config.cjs",
        "tailwind.config.cjs",
        "tailwind.css",
        "src/**/*.css",
        "src/**/*.tsx",
        "src/**/*.ts",
        "static/**"
      ],
      "outputs": ["storybook-static/**"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    }
  }
}
