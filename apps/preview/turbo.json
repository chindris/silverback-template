{
  "extends": ["//"],
  "tasks": {
    "prep": {
      "dependsOn": ["prep:app", "prep:server"]
    },
    "prep:app": {
      "dependsOn": ["^prep"],
      "inputs": ["src/**", "index.html", "vite.config.ts"],
      "outputs": ["dist/**"]
    },
    "prep:server": {
      "inputs": ["server/**"],
      "outputs": ["build/**"]
    },
    "test:static": {
      "dependsOn": ["^prep"],
      "inputs": ["src/**", "!src/gatsby-fragments.js"]
    }
  }
}
